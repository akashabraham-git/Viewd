<div style="max-width: 1000px; margin: 0 auto; padding: 40px 20px; color: #9ab; font-family: sans-serif;">
  <div style="display: flex; gap: 40px; margin-bottom: 50px; align-items: flex-start;">
    <%# Profile Image Placeholder %>
    <div style="width: 230px; aspect-ratio: 2/3; background: #2c3440; border-radius: 4px; border: 1px solid #456; flex-shrink: 0; overflow: hidden;">
      <% if @cast_member.pic.present? %>
        <%= image_tag @cast_member.pic, style: "width: 100%; height: 100%; object-fit: cover;" %>
      <% end %>
    </div>

    <div>
      <h1 style="color: #fff; margin: 0; font-size: 2.5rem;"><%= @cast_member.name %></h1>
      <p style="color: #678; font-size: 1.1rem; margin-top: 10px;">
        <%= @jobs.join(", ")  %>
      </p>
      
      <div style="margin-top: 20px; line-height: 1.6; color: #9ab;">
        <h4 style="color: #fff; border-bottom: 1px solid #2c3440; padding-bottom: 5px; font-size: 0.8rem;">BIO</h4>
        <p><%= @cast_member.bio || "No biography available for this member." %></p>
      </div>
    </div>
  </div>

  <h4 style="color: #fff; border-bottom: 1px solid #456; padding-bottom: 5px; margin-bottom: 20px; font-size: 0.8rem; letter-spacing: 1px;">FILMOGRAPHY</h4>
  
  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 20px;">
    <% @movies.each do |movie| %>
      <div style="display: flex; flex-direction: column;">
        <%= link_to movie_path(movie), style: "text-decoration: none;" do %>
          <div style="aspect-ratio: 2/3; background: #1a2129; border: 1px solid #2c3440; border-radius: 4px; overflow: hidden;">
            <%= image_tag movie.poster_url, style: "width: 100%; height: 100%; object-fit: cover;" if movie.poster_url.present? %>
          </div>
          <p style="color: #fff; font-size: 0.85rem; margin-top: 8px; text-align: center;"><%= movie.title %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>