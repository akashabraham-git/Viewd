<div style="width: 100%;">
  <div class="navbar" style="display: flex; justify-content: space-between; align-items: center; width: 100%; padding: 0 20px;">
    <h1>VIEWD</h1>
    
    <%= form_with url: movies_path, method: :get do |f| %>
      <%= f.text_field :query, value: params[:query], placeholder: "Search movies..." %>
      <%= f.submit "Search" %>
    <% end %>
  </div>

  <br />
  <br />

  <div class = "grid" style = "width: 100%; display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px">
    <%if @movies.present?%>
      <%@movies.each do |movie|%>
        <div style="display: flex; flex-direction: column;">
          <%=link_to movie_path(movie) do%>
            <%if movie.poster_url.present?%>
              <%=image_tag movie.poster_url, alt: movie.title, style: "width: 100%; height: 350px; object-fit: cover"%>
            <%end%>
            <h1><%=movie.title%></h1>
          <%end%>
        </div>
      <%end%>
    <%end%>
    
  </div>
</div>

