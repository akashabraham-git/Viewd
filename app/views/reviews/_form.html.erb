<%= form_with(model: [movie, movie.reviews.build], local: true, style: "background: #1a2129; padding: 20px; border-radius: 4px; border: 1px solid #2c3440;") do |f| %>
  <div style="margin-bottom: 15px;">
    <label style="display: block; color: #678; font-size: 0.7rem; letter-spacing: 1px; margin-bottom: 8px; text-transform: uppercase;">
      Add a review...
    </label>
    <%= f.text_area :content, 
        placeholder: "Write your thoughts on #{movie.title}...", 
        style: "width: 100%; height: 120px; background: #14181c; color: #fff; border: 1px solid #456; border-radius: 3px; padding: 12px; font-family: inherit; font-size: 0.95rem; resize: vertical; outline: none;",
        onfocus: "this.style.borderColor='#00e054'",
        onblur: "this.style.borderColor='#456'" %>
  </div>

  <div style="display: flex; justify-content: flex-end;">
    <%= f.submit "SAVE", 
        style: "background: #00e054; color: #000; border: none; padding: 8px 25px; border-radius: 3px; font-weight: bold; font-size: 0.8rem; cursor: pointer; transition: background 0.2s;",
        onmouseover: "this.style.background='#00c048'",
        onmouseout: "this.style.background='#00e054'" %>
  </div>
<% end %>