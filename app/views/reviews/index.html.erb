<div style="max-width: 800px; margin: 0 auto; padding: 40px 20px; color: #9ab; font-family: sans-serif;">
  
  <div style="display: flex; gap: 20px; align-items: center; margin-bottom: 40px;">
    <%= image_tag @movie.poster_url, style: "width: 80px; border-radius: 4px;" %>
    <div>
      <h4 style="color: #678; margin: 0; font-size: 0.8rem;">Reviews for</h4>
      <h1 style="color: #fff; margin: 0; font-size: 2rem;"><%= @movie.title %></h1>
    </div>
  </div>

  <div style="border-top: 1px solid #2c3440;">
    <% @reviews.each do |review| %>
      <div style="display: flex; gap: 20px; padding: 30px 0; border-bottom: 1px solid #232a33;">
        <%# User Avatar %>
        <div style="width: 50px; height: 50px; background: #2c3440; border-radius: 50%; overflow: hidden; flex-shrink: 0; border: 1px solid #456;">
          <%# image_tag review.user.profile_picture %>
        </div>

        <div style="flex: 1;">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <%= link_to review.user.name, user_path(review.user), style: "color: #fff; text-decoration: none; font-weight: bold; font-size: 1.1rem;" %>
            <small style="color: #456;"><%= review.created_at.strftime("%b %d, %Y") %></small>
          </div>
          
          <div style="margin-top: 10px; color: #9ab; line-height: 1.6; font-size: 1rem;">
            <%= simple_format review.content %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "â† Back to #{@movie.title}", movie_path(@movie), style: "display: inline-block; margin-top: 30px; color: #00e054; text-decoration: none; font-weight: bold;" %>
</div>