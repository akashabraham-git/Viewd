<div style="max-width: 500px; margin: 60px auto; background: #1a2129; padding: 30px; border-radius: 8px; border: 1px solid #2c3440; font-family: sans-serif;">
  <h2 style="color: #fff; margin-top: 0;">Edit Review</h2>

  <%= form_with(model: [@movie, @review], local: true, data: { turbo: false }) do |f| %>
    <div style="margin-bottom: 20px;">
      <%= f.text_area :content, style: "width: 100%; height: 180px; background: #14181c; color: #fff; border: 1px solid #456; padding: 15px; border-radius: 4px; font-size: 1rem; outline: none;" %>
    </div>
    
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <%= f.submit "UPDATE", style: "background: #00e054; color: #000; border: none; padding: 10px 25px; font-weight: bold; border-radius: 3px; cursor: pointer;" %>
      
      <%# Link back to wherever the session says we should go %>
      <%= link_to "CANCEL", (session[:review_return_to] || movie_path(@movie)), style: "color: #9ab; text-decoration: none; font-size: 0.9rem;" %>
    </div>
  <% end %>
</div>