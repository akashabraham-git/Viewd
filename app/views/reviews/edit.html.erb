<div style="max-width: 600px; margin: 50px auto; color: #9ab; font-family: sans-serif;">
  <h2 style="color: #fff;">Edit Review for <%= @movie.title %></h2>
  
  <%= form_with(model: @review, local: true) do |f| %>
    <%= f.text_area :content, style: "width: 100%; height: 150px; background: #1a2129; color: #fff; border: 1px solid #456; padding: 10px; border-radius: 4px;" %>
    
    <div style="margin-top: 20px; display: flex; gap: 15px;">
      <%= f.submit "UPDATE REVIEW", style: "background: #00e054; color: #000; border: none; padding: 10px 20px; font-weight: bold; border-radius: 3px; cursor: pointer;" %>
      <%= link_to "CANCEL", user_path(User.first), style: "color: #9ab; text-decoration: none; padding: 10px; font-size: 0.9rem;" %>
    </div>
  <% end %>
</div>