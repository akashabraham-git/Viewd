<div style="max-width: 1000px; margin: 0 auto; padding: 40px 20px; color: #9ab; font-family: sans-serif;"></div>
  
  <div style="display: flex; justify-content: space-between; align-items: flex-end; border-bottom: 1px solid #2c3440; padding-bottom: 15px; margin-bottom: 30px;">
    <div>
      <h4 style="color: #678; margin: 0; font-size: 0.7rem; letter-spacing: 2px; text-transform: uppercase;">Watchlist</h4>
      <h1 style="color: #fff; margin: 5px 0 0 0; font-size: 1.5rem;"><%= @user.name %> wants to see...</h1>
    </div>
    <span style="color: #678; font-size: 0.9rem;"><%= pluralize(@entries.count, "movie") %></span>
  </div>

  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 20px;">
    <% if @entries.any? %>
      <% @entries.each do |entry| %>
        <div class="poster-card" style="display: flex; flex-direction: column;">
          <%= link_to movie_path(entry.movie), style: "text-decoration: none; position: relative;" do %>
            <div style="aspect-ratio: 2/3; background: #1a2129; border-radius: 4px; overflow: hidden; border: 1px solid #2c3440; transition: border-color 0.2s;">
              <%= image_tag entry.movie.poster_url, 
                            alt: entry.movie.title, 
                            style: "width: 100%; height: 100%; object-fit: cover; display: block;" %>
            </div>
            
            <p style="color: #9ab; font-size: 0.75rem; margin-top: 8px; text-align: center; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
              <%= entry.movie.title %>
            </p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div style="grid-column: 1/-1; text-align: center; padding: 80px 0; border: 2px dashed #2c3440; border-radius: 8px;">
        <p style="color: #456; font-size: 1.1rem;">This watchlist is currently empty.</p>
        <%= link_to "Browse movies to add", movies_path, style: "color: #00e054; text-decoration: none; font-weight: bold; font-size: 0.9rem;" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .poster-card:hover div {
    border-color: #00e054 !important;
  }
  .poster-card:hover p {
    color: #fff !important;
  }
</style>