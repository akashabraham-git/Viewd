<div style="max-width: 1000px; margin: 0 auto; padding: 40px 20px; color: #9ab;">

  <h2 style="color: #fff; border-bottom: 1px solid #2c3440; padding-bottom: 15px;
             text-transform: uppercase; font-size: 0.9rem; letter-spacing: 2px;">
    <%= @user.name %> Films
  </h2>

  <div style="display: grid;
              grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
              gap: 20px;
              margin-top: 30px;">

    <% if @entries&.any? %>
      <% @entries.each do |entry| %>
        <div style="display: flex; flex-direction: column;">
          <%= link_to movie_path(entry.movie), style: "text-decoration: none;" do %>
            <div style="aspect-ratio: 2/3;
                        background: #1a2129;
                        border-radius: 4px;
                        overflow: hidden;
                        border: 1px solid #2c3440;">
              <%= image_tag entry.movie.poster_url,
                    style: "width: 100%; height: 100%; object-fit: cover;" %>
            </div>
            <p style="color: #fff;
                      font-size: 0.8rem;
                      margin-top: 8px;
                      text-align: center;">
              <%= entry.movie.title %>
            </p>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div style="grid-column: 1 / -1;
                  text-align: center;
                  padding: 100px 0;
                  color: #456;">
        <p>No films found here.</p>
      </div>
    <% end %>

  </div>
</div>
