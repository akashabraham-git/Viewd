<div style="max-width: 700px; margin: 0 auto; padding: 40px 20px; color: #9ab;">
  <h2 style="color: #fff; border-bottom: 1px solid #2c3440; padding-bottom: 15px; text-transform: uppercase; font-size: 0.9rem; letter-spacing: 1px;">
    <%= @user.name %>: <%= @type.upcase %>
  </h2>

  <div style="margin-top: 10px;">
    <% if @users.any? %>
      <% @users.each do |user| %>
        <div style="display: flex; align-items: center; justify-content: space-between; padding: 15px 0; border-bottom: 1px solid #232a33;">
          <div style="display: flex; align-items: center; gap: 15px;">
            <div style="width: 45px; height: 45px; background: #2c3440; border-radius: 50%; border: 1px solid #456;"></div>
            <%= link_to user.name, user_path(user), style: "color: #fff; text-decoration: none; font-weight: bold; font-size: 1.1rem;" %>
          </div>

          <% unless user == User.first %>
            <% if User.first.following?(user) %>
              <%= button_to "Unfollow", connection_path(user), method: :delete, style: "background: transparent; color: #678; border: 1px solid #456; padding: 5px 12px; border-radius: 3px; cursor: pointer;" %>
            <% else %>
              <%= button_to "Follow", connections_path(following_id: user.id), method: :post, style: "background: #00e054; color: #000; border: none; padding: 6px 14px; border-radius: 3px; font-weight: bold; cursor: pointer;" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p style="padding: 40px 0; text-align: center; color: #456;">No one here yet.</p>
    <% end %>
  </div>
  
  <%= link_to "â† Back to Profile", user_path(@user), style: "display: inline-block; margin-top: 30px; color: #678; text-decoration: none; font-size: 0.8rem;" %>
</div>